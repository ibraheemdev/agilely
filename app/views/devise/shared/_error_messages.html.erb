<% if resource.errors.any? %>
<div id="error_explanation">
    <div class="rounded-md bg-red-100 p-4 py-2 px-3">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm leading-5 font-medium text-red-700">
                    <%= I18n.t("errors.messages.not_saved", count: resource.errors.count) %>
                </h3>
                <div class="mt-2 text-sm leading-5 text-red-700">
                    <ul class="list-disc pl-5">
                        <% resource.errors.full_messages.each do |message| %>
                        <li class="text-red-600 leading-5 text-sm"><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
 <% end %>