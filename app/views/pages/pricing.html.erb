<%= render "layouts/header" %>

<body class="antialiased bg-gray-100 font-tempbugfix">
    <div class="relative bg-gray-100">
        <main class="relative max-w-md mx-auto px-4 pt-6 lg:px-16 lg:pt-12 lg:max-w-5xl">
            <h1 class="max-w-xs mx-auto text-3xl font-bold text-center leading-snug text-gray-900 lg:max-w-2xl lg:text-5xl">
                <span class="inline-flex relative text-white">
                    <span aria-hidden class="absolute inset-0 bg-indigo-600" style="transform: skewY(-.5deg) scaleX(1.05)"></span>
