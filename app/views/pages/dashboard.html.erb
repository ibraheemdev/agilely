<div class="m-5">
    <%= form_with(url: boards_path, method: "post") do %>
        <div class="mt-1 rounded-md shadow-sm">
            <%= text_field(:board, :title, class: "appearance-none block w-64 px-3 py-2 border border-gray-400 rounded-md placeholder-gray-400 focus:outline-none focus:border-indigo-400 transition duration-150 ease-in-out sm:text-sm sm:leading-5") %>
        </div>
        <%= button_tag(type: "submit", class: "mt-1 flex items-center pl-2 pr-4 py-2 text-sm font-medium text-white bg-gray-800 rounded-md hover:bg-gray-700") do %>
            <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none">
                <path d="M12 7v10m5-5H7" stroke="currentColor" strokeWidth="2" strokeLinecap="round" />
            </svg>
            <span class="ml-1">New Board</span>
        <% end %>
    <% end %>
    <% @boards.each do |board| %>
        <div>
            <%= link_to board.title, show_board_path(slug: board.slug) %>
            <%= button_to "Delete", board, method: :delete %>
        </div>
    <% end %>
</div>